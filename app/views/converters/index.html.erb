<div class="container converter-conatiner p-3 my-5 rounded">

  <div class="pl-2 pb-3">
    <span>Amount</span><br>
    <input class="mt-2 rounded" id="amount" value="1"></input>
  </div>

  <div class="d-flex justify-content-around">
    <div class="col-5 p-0">
      <span>From</span><br>
      <input class="mt-2 rounded search-box" id="from-currency" placeholder="to" value="bitcoin"></input>
      <div class="list-group search-result rounded hide"  id="from-currency-search-result"></div>
    </div>

    <div class="col-1 p-0 text-center align-self-end">
      <button id="exchange-button" class="btn btn-primary"><i class="fas fa-exchange-alt"></i></button>
    </div>

    <div class="col-5 p-0">
      <span class="pb-2">To</span><br>
      <input class="mt-2 search-box rounded" id="to-currency" placeholder="from" value="tether"></input>
      <div class="list-group list-group-flush search-result rounded hide" id="to-currency-search-result"></div>
    </div>
  </div>

  <div class="d-flex justify-content-around my-3">
    <div class="col-5 p-0 text-right" id="result-left"></div>
    <div class="col-1 p-0 text-center" id="result-middle"></div>
    <div class="col-5 p-0 text-left" id="result-right"></div>
  </div>

  <div class="d-flex justify-content-center">
    <button class="btn btn-primary" id="convert-button">Convert</button>
  </div>

</div>

