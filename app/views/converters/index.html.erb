<div class="row justify-content-center">
  <div class="col-lg-6 col-10">
    <div class="converter-conatiner p-3 my-5 rounded">

      <div class="d-flex justify-content-around">
        <div class="col-5 p-0">
          <span>Amount</span><br>
          <input class="mt-2 form-control" id="amount" value="1"></input>
        </div>
        <div class="col-1 p-0"></div>
        <div class="col-5 p-0"></div>
      </div>

      <div class="d-flex mt-3 justify-content-around">
        <div class="col-5 p-0">From</div>
        <div class="col-1 p-0"></div>
        <div class="col-5 p-0">To</div>
      </div>

      <div class="d-flex justify-content-around">
        <div class="col-5 p-0">
          <input class="mt-2 form-control m-0" id="from-currency" placeholder="to" value="bitcoin"></input>
          <div class="list-group rounded search-result hide" id="from-currency-search-result"></div>
        </div>

        <div class="col-1 p-0 text-center align-self-end">
          <button class="btn btn-primary px-2_5" id="exchange-button"><i class="fas fa-exchange-alt"></i></button>
        </div>

        <div class="col-5 p-0">
          <input class="mt-2 form-control m-0" id="to-currency" placeholder="from" value="tether"></input>
          <div class="list-group rounded search-result hide" id="to-currency-search-result"></div>
        </div>
      </div>

      <div class="d-flex mt-3 justify-content-around">
        <div class="col-5 p-0 text-right" id="result-left"></div>
        <div class="col-1 p-0 text-center" id="result-middle"></div>
        <div class="col-5 p-0 text-left" id="result-right"></div>
      </div>

      <div class="d-flex mt-3 justify-content-center">
        <button class="btn btn-primary" id="convert-button">Convert</button>
      </div>

    </div>
  </div>
</div>

